<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">	
	<PreferenceCategory android:title="Subreddits">
		<ListPreference 
			android:entries="@array/subredditMode"
			android:title="Subreddits" 
			android:summary="Which subreddits to display"
			android:key="subredditMode" 
			android:entryValues="@array/subredditMode"></ListPreference>
		<PreferenceScreen android:title="Edit subreddits list" android:summary="only for Manual selection mode">
			<intent android:action="android.intent.action.MAIN"
				android:targetPackage="net.acuttone.reddimg" 
				android:targetClass="net.acuttone.reddimg.SubredditsPickerActivity" />
		</PreferenceScreen>
	</PreferenceCategory>
	<PreferenceCategory android:title="Title format">
		 <CheckBoxPreference
                        android:title="Show score"
                        android:defaultValue="false"
                        android:key="showScore" />
         <CheckBoxPreference
                        android:title="Show author"
                        android:defaultValue="false"
                        android:key="showAuthor" />
         <CheckBoxPreference
                        android:title="Show subreddit"
                        android:defaultValue="false"
                        android:key="showSubreddit" />
         <ListPreference 
			android:entries="@array/titleSizeKeys"
			android:title="Text size" 
			android:key="titleSize" 
			android:entryValues="@array/titleSizeValues"></ListPreference> 
	</PreferenceCategory>
	<PreferenceCategory android:title="Cache">
			<EditTextPreference android:key="sd_cache_size"
        						android:title="SD cache size" 
        						android:defaultValue="10"
        						android:inputType="number"
        						android:maxLength="4" /> 
	</PreferenceCategory>
</PreferenceScreen>
